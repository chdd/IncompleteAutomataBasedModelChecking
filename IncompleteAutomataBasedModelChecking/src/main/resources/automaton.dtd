<!ELEMENT buchiAutomaton (initialStates, states, acceptingStates,  transitionRelation, alphabet, transparentStates)>
  <!ELEMENT initialStates (initialState*)>
  <!ELEMENT states (state*)>
  <!ELEMENT acceptingStates (acceptingState*)>
  <!ELEMENT transparentStates (transparentState*)>
  <!ELEMENT transitionRelation (element*)>
  <!ELEMENT alphabet (character*)>
  <!ELEMENT element (sourceState, transitions)>
  <!ELEMENT transitions (transition*)>
  <!ELEMENT transition (character, destinationState)>
  <!ELEMENT state EMPTY>
  <!ELEMENT initialState (#PCDATA)>
  <!ELEMENT acceptingState (#PCDATA)>
  <!ELEMENT transparentState (#PCDATA)>
  <!ELEMENT destinationState (#PCDATA)>
  <!ELEMENT sourceState (#PCDATA)>
  <!ELEMENT character (#PCDATA)>
  <!ATTLIST state id CDATA #REQUIRED>